<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.grzyb.andrzej.shoppinglist.ShoppingListEditActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shoppingListNameEditText"
        android:layout_weight="1"
        android:hint="@string/shoppingListName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shoppingListDescriptionEditText"
        android:hint="@string/shoppingListDescription" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonSave"
        android:id="@+id/addShoppingListButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickAddShoppingList" />
</LinearLayout>
